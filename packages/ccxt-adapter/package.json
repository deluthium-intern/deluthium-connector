{
  "name": "@deluthium/ccxt",
  "version": "0.1.0",
  "description": "Deluthium exchange adapter for CCXT -- extends ccxt.Exchange externally (no fork required)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/deluthium-intern/deluthium-connector.git",
    "directory": "packages/ccxt-adapter"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "test": "node --import tsx --test 'tests/*.test.ts'",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rm -rf dist .turbo",
    "lint": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@deluthium/sdk": "workspace:*",
    "ccxt": "^4.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "tsx": "^4.19.0",
    "typescript": "^5.4.0"
  },
  "peerDependencies": {
    "ccxt": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "ccxt": {
      "optional": false
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "deluthium",
    "ccxt",
    "exchange",
    "rfq",
    "defi",
    "crypto",
    "market-maker"
  ]
}

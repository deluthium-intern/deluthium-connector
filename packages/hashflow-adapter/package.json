{
  "name": "@deluthium/hashflow-adapter",
  "version": "0.1.0",
  "description": "Hashflow RFQ bridge adapter for Deluthium -- WebSocket market making, EIP-191 signing, cross-chain support",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/deluthium-intern/deluthium-connector.git",
    "directory": "packages/hashflow-adapter"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "test": "node --import tsx --test 'tests/*.test.ts'",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rm -rf dist .turbo",
    "lint": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@deluthium/sdk": "workspace:*",
    "ethers": "^6.13.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/ws": "^8.5.0",
    "tsx": "^4.19.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "deluthium",
    "hashflow",
    "rfq",
    "market-maker",
    "websocket",
    "cross-chain",
    "defi"
  ]
}

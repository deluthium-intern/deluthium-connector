FROM python:3.11-slim
WORKDIR /app
RUN apt-get update && apt-get install -y --no-install-recommends gcc && rm -rf /var/lib/apt/lists/*
COPY packages/hummingbot-connector/ ./packages/hummingbot-connector/
RUN pip install --no-cache-dir ./packages/hummingbot-connector/
ENV PYTHONUNBUFFERED=1
CMD ["python", "-m", "deluthium_hummingbot"]
